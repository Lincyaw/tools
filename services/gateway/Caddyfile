{
    # Use local_certs for development to avoid Let's Encrypt rate limits
    # This will generate self-signed certificates
    local_certs

    # Email for Let's Encrypt notifications (used in production)
    email aoyangfang@gmail.com
}

# Main site configuration
# Support both HTTP and HTTPS without forcing redirect
http://aoyangfang.top, http://www.aoyangfang.top, https://aoyangfang.top, https://www.aoyangfang.top {
    log {
        output file /var/log/caddy/access.log
        format json
    }

    # Security headers (removed HSTS to allow HTTP)
    header {
        # Prevent clickjacking
        X-Frame-Options "SAMEORIGIN"
        # Prevent MIME type sniffing
        X-Content-Type-Options "nosniff"
        # XSS protection
        X-XSS-Protection "1; mode=block"
    }

    # Enable compression
    encode gzip zstd

    # Short Code service API - create short links
    handle /api/v1/shorten* {
        reverse_proxy shortcode:8080 {
            header_up Host {host}
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            header_up X-Forwarded-Proto {scheme}
            header_up X-Forwarded-Host {host}

            # Timeout settings
            transport http {
                dial_timeout 30s
                response_header_timeout 30s
            }
        }
    }

    # Short Code statistics API
    handle /api/v1/stats* {
        reverse_proxy shortcode:8080 {
            header_up Host {host}
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            header_up X-Forwarded-Proto {scheme}
            header_up X-Forwarded-Host {host}
        }
    }

    # Health check and metrics endpoints
    handle /health {
        reverse_proxy shortcode:8080
    }

    handle /metrics {
        reverse_proxy shortcode:8080
    }

    # 主页 - 精确匹配根路径
    handle / {
        root * /usr/share/caddy
        file_server
        try_files /index.html
    }

    # 静态文件 - 匹配特定文件扩展名
    handle_path /*.css {
        root * /usr/share/caddy
        file_server
    }

    handle_path /*.js {
        root * /usr/share/caddy
        file_server
    }

    handle_path /*.html {
        root * /usr/share/caddy
        file_server
    }

    handle_path /favicon.ico {
        root * /usr/share/caddy
        file_server
    }

    # Short link redirection (must be last to handle all other paths)
    handle {
        reverse_proxy shortcode:8080 {
            header_up Host {host}
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            header_up X-Forwarded-Proto {scheme}
        }
    }
}

# 本地开发环境配置（HTTP only）
:80 {
    log {
        output stdout
    }

    # API 路由
    handle /api/v1/shorten* {
        reverse_proxy shortcode:8080
    }

    handle /api/v1/stats* {
        reverse_proxy shortcode:8080
    }

    # 健康检查和指标端点
    handle /health {
        reverse_proxy shortcode:8080
    }

    handle /metrics {
        reverse_proxy shortcode:8080
    }

    # 短链接重定向（作为默认处理器，处理所有其他请求）
    handle {
        reverse_proxy shortcode:8080
    }
}
