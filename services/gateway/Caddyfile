{
    # Disable auto HTTPS for development, comment out this line in production
    # auto_https off
    
    # Email for Let's Encrypt notifications
    email aoyangfang@gmai.com
}

# Main site configuration
aoyangfang.top, www.aoyangfang.top {
    log {
        output file /var/log/caddy/access.log
        format json
    }
    
    # Security headers
    header {
        # Strict Transport Security
        Strict-Transport-Security "max-age=31536000; includeSubDomains"
        # Prevent clickjacking
        X-Frame-Options "SAMEORIGIN"
        # Prevent MIME type sniffing
        X-Content-Type-Options "nosniff"
        # XSS protection
        X-XSS-Protection "1; mode=block"
    }
    
    # Enable compression
    encode gzip zstd
    
    # Short Code service API - create short links
    handle /api/v1/shorten* {
        reverse_proxy shortcode:8080 {
            header_up Host {host}
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            header_up X-Forwarded-Proto {scheme}
            header_up X-Forwarded-Host {host}
            
            # Timeout settings
            transport http {
                dial_timeout 30s
                response_header_timeout 30s
            }
        }
    }
    
    # Short Code statistics API
    handle /api/v1/stats* {
        reverse_proxy shortcode:8080 {
            header_up Host {host}
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            header_up X-Forwarded-Proto {scheme}
            header_up X-Forwarded-Host {host}
        }
    }
    
    # Health check and metrics endpoints
    handle /health {
        reverse_proxy shortcode:8080
    }
    
    handle /metrics {
        reverse_proxy shortcode:8080
    }
    
    # Short link redirection (matches /xxx format short codes, must be last)
    handle /{shortcode} {
        reverse_proxy shortcode:8080 {
            header_up Host {host}
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            header_up X-Forwarded-Proto {scheme}
        }
    }
    
    # 主页和静态文件
    handle {
        root * /usr/share/caddy
        file_server
        try_files {path} /index.html
    }
}

# 本地开发环境配置（HTTP only）
:80 {
    log {
        output stdout
    }
    
    # API 路由
    handle /api/v1/shorten* {
        reverse_proxy shortcode:8080
    }
    
    handle /api/v1/stats* {
        reverse_proxy shortcode:8080
    }
    
    # 健康检查和指标端点
    handle /health {
        reverse_proxy shortcode:8080
    }
    
    handle /metrics {
        reverse_proxy shortcode:8080
    }
    
    # 短链接重定向（作为默认处理器，处理所有其他请求）
    handle {
        reverse_proxy shortcode:8080
    }
}
